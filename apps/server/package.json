{
  "name": "@rina/server",
  "version": "1.0.0",
  "main": "index.js",
  "exports": {
    "./routes": "./src/api/routes/index.ts",
    "./schema": "./src/db/schema/index.ts"
  },
  "scripts": {
    "dev": "tsx --require tsconfig-paths/register --watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "build": "tsc && tsc-alias",
    "db:seed": "cross-env DB_SEEDING=true tsx src/db/seeds/index.ts",
    "db:seed:planning": "cross-env DB_SEEDING=true tsx --require tsconfig-paths/register src/db/seeds/planning-activities-standalone.ts",
    "db:seed:execution": "cross-env DB_SEEDING=true tsx --require tsconfig-paths/register src/db/seeds/execution-activities-standalone.ts",
    "db:seed:events": "cross-env DB_SEEDING=true tsx --require tsconfig-paths/register src/db/seeds/events-standalone.ts",
    "db:seed:event-mapping": "cross-env DB_SEEDING=true tsx --require tsconfig-paths/register src/db/seeds/event-mappings-standalone.ts",
    "db:seed:statement-templates": "cross-env DB_SEEDING=true tsx --require tsconfig-paths/register src/db/seeds/statement-templates-standalone.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:dashboard-indexes": "tsx --require tsconfig-paths/register src/db/migrations/run-dashboard-indexes.ts",
    "db:migrate:quarterly-rollover-indexes": "tsx --require tsconfig-paths/register src/db/migrations/run-quarterly-rollover-indexes.ts",
    "db:verify:quarterly-rollover-indexes": "tsx --require tsconfig-paths/register src/db/migrations/verify-quarterly-rollover-indexes.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bushaija/rina-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bushaija/rina-api/issues"
  },
  "homepage": "https://github.com/Bushaija/rina-api#readme",
  "description": "",
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.16",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.3",
    "better-auth": "^1.3.9",
    "bull": "^4.16.5",
    "decimal.js": "^10.6.0",
    "docx": "^9.5.1",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "exceljs": "^4.4.0",
    "fastify": "^5.5.0",
    "hono": "^4.9.6",
    "hono-pino": "^0.10.2",
    "luxon": "^3.7.1",
    "nodemailer": "^7.0.11",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pino": "^9.9.2",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "psl": "^1.15.0",
    "resend": "^6.0.2",
    "stoker": "^2.0.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4",
    "xlsx": "^0.18.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/decimal.js": "^7.4.3",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.1",
    "@types/papaparse": "^5.3.16",
    "@types/pg": "^8.15.5",
    "@types/psl": "^1.11.0",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "wrangler": "^3.95.0"
  }
}
